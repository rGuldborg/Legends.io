<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="TOP_CENTER" spacing="20" styleClass="help-view-root">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <VBox spacing="10" alignment="TOP_LEFT" maxWidth="600">
        <Label text="Game View: Live Drafting" styleClass="help-header"/>
        <TextFlow styleClass="help-body-text">
            <Text text="Auto-mirrors Champion Select. Get real-time stats and recommendations. Focus on playing, not typing."/>
        </TextFlow>

        <Label text="Game View: Simulate Drafts" styleClass="help-header"/>
        <TextFlow styleClass="help-body-text">
            <Text text="Manually input picks and bans. Practice strategies and test team compositions. Click empty slots to pick, right-click to clear."/>
        </TextFlow>

        <Label text="Champions View: Matchups" styleClass="help-header"/>
        <TextFlow styleClass="help-body-text">
            <Text text="Explore champions and instantly see good/bad matchups. Find synergies and counters to gain an edge."/>
        </TextFlow>

        <Label text="Role Assignment" styleClass="help-header"/>
        <TextFlow styleClass="help-body-text">
            <Text text="Roles are auto-assigned. Adjust manually for off-meta picks to tailor recommendations to your team."/>
        </TextFlow>
    </VBox>
</VBox>
