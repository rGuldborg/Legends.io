{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Collector",
            "type": "shell",
            "command": "mvn",
            "args": [
                "exec:java",
                "-Dexec.mainClass=org.example.collector.CollectorRunner"
            ],
            "options": {
                "env": {
                    "RIOT_API_KEY": "${env:RIOT_API_KEY}",
                    "MATCH_LIMIT": "100",
                    "SEED_COUNT": "10"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Application",
            "type": "shell",
            "command": "mvn",
            "args": [
                "javafx:run"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}